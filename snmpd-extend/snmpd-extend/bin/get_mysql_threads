export LC_ALL=C
export PATH="/usr/sbin:/usr/bin:/sbin:/bin"

# We assume that there is a ".my.cnf" file in the home of root.
echo "SHOW GLOBAL STATUS LIKE 'Threads%';" | mysql \
    | tr '[:upper:]' '[:lower:]'                   \
    | sed -nr -e 's/[[:space:]]+/ /g'              \
              -e 's/\t/ /g'                        \
              -e 's/([^[:space:]]*) +/\1=/g'       \
              -e '/thread/p'


