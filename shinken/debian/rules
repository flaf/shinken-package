#!/usr/bin/make -f
# -*- makefile -*-
# Sample debian/rules that uses debhelper.
# This file was originally written by Joey Hess and Craig Small.
# As a special exception, when this file is copied by dh-make into a
# dh-make output file, you may use that output file without restriction.
# This special exception was added by Craig Small in version 0.37 of dh-make.

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1
export PYBUILD_NAME=shinken

%:
	dh $@ --with python2

override_dh_clean:
	rm -rf build/
	rm -rf Shinken.egg-info/
	dh_clean

# Replace all the configuration after install.
override_dh_auto_install:
	dh_auto_install
	rm -rf "debian/$(PYBUILD_NAME)/etc/shinken/"
	mkdir "debian/$(PYBUILD_NAME)/etc/shinken/"
	cp -r "debian/etc_shinken/"* "debian/$(PYBUILD_NAME)/etc/shinken/"
	cp -r "debian/pyro4/"* "debian/$(PYBUILD_NAME)/usr/lib/python2.7/dist-packages/"

override_dh_python2:
	dh_python2


