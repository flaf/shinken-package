#!/usr/bin/make -f
# -*- makefile -*-
# Sample debian/rules that uses debhelper.
# This file was originally written by Joey Hess and Craig Small.
# As a special exception, when this file is copied by dh-make into a
# dh-make output file, you may use that output file without restriction.
# This special exception was added by Craig Small in version 0.37 of dh-make.

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1
export PYBUILD_NAME=shinken

RULESDIR := $(realpath $(firstword $(MAKEFILE_LIST)))
WORKINGDIR := $(realpath $(RULESDIR:/debian/rules=))
FILES_TO_CLEAN := $(shell cd $(WORKINGDIR) && \ls | grep -v debian)

%:
	dh $@ --with python2

override_dh_clean:
	rm -rf "$(WORKINGDIR)/build/"
	rm -rf "$(WORKINGDIR)/Shinken.egg-info/"
	dh_clean

# Replace all the configuration after install.
override_dh_auto_install:
	dh_auto_install
	rm -rf "$(WORKINGDIR)/debian/$(PYBUILD_NAME)/etc/shinken"
	mkdir "$(WORKINGDIR)/debian/$(PYBUILD_NAME)/etc/shinken"
	cp -r "$(WORKINGDIR)/debian/etc_shinken/"* "$(WORKINGDIR)/debian/$(PYBUILD_NAME)/etc/shinken/"
	cp -r "$(WORKINGDIR)/Pyro4/"* "$(WORKINGDIR)/debian/$(PYBUILD_NAME)/usr/lib/python2.7/dist-packages/"

clean_for_git:
	cd "$(WORKINGDIR)" && rm -rf $(FILES_TO_CLEAN)


